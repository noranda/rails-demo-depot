<h1>Your Pragmatic Catalog</h1>

<% if @count > 5 %>
     <p>You've been here <%= pluralize(@count, "time") %>.</p>
<% end %>

<% @products.each do |product| %>
    <div class="entry">
      <%= link_to image_tag(product.image_url), line_items_path(:product_id => product), data: { :method => :post } %>
      <h3><%= product.title %></h3>
      <%=sanitize product.description %>
      <div class="price_line">
        <span class="price"><%= number_to_currency(product.price, raise: true) %></span>
        <%= button_to 'Add to Cart', line_items_path(:product_id => product) %>
      </div>
    </div>
<% end %>
